@page "/publier-trajet"

<head>
    
    <link rel="stylesheet" href="css/PublierTrajet.css" />
</head>

<div class="container">
    <h1 class="title">Publier un trajet</h1>
    <form>
        <div class="form-group">
            <label class="label" for="departure">Départ :</label>
            <input id="departure" @bind="DepartureLocation" type="text" placeholder="Entrez le lieu de départ" required />
        </div>
        <div class="form-group">
            <label class="label" for="destination">Destination :</label>
            <input id="destination" @bind="DestinationLocation" type="text" placeholder="Entrez la destination" required />
        </div>
        <div class="form-group">
            <label class="label" for="departure-time">Heure de départ :</label>
            <input id="departure-time" type="datetime-local" @bind="DepartureTime" required />
        </div>
        <button type="submit" class="submit-button" @onclick:prevent="PublishTrip">Publier</button>
    </form>
</div>

@code {
    // Properties for form inputs
    private string DepartureLocation { get; set; }
    private string DestinationLocation { get; set; }
    private DateTime DepartureTime { get; set; }

    // Method to publish the trip
    private void PublishTrip()
    {
        // Example logic to handle publishing the trip
        if (!string.IsNullOrWhiteSpace(DepartureLocation) && !string.IsNullOrWhiteSpace(DestinationLocation))
        {
            // Here you can perform actions like saving the trip to a database or triggering other processes
            Console.WriteLine($"Trajet publié : Départ de {DepartureLocation} à destination de {DestinationLocation} à {DepartureTime}");
        }
        else
        {
            // Handle invalid input or display error messages
            Console.WriteLine("Veuillez remplir tous les champs.");
        }
    }
}
