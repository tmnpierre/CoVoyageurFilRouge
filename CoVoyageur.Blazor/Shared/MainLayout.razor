            </div>

            <!-- Dropdown  -->
            <div class="dropdown">
                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: #2C3C5B; color: white;">
                    Compte
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <!-- liens du menu -->
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
