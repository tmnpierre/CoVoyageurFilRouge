@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href="#" class="btn" style="background-color: #5F8575; color: white; margin-right: 10px;">Covoiturage</a>
                <a href="#" class="btn" style="background-color: #5F8575; color: white; margin-right: 10px;">Bus</a>
                <a href="#" class="btn" style="background-color: #5F8575; color: white; margin-right: 10px;">Covoiturage du quotidien</a>
            </div>

            <div class="d-flex align-items-center">
                <input type="search" placeholder="Rechercher" aria-label="Rechercher" class="form-control mr-2">
